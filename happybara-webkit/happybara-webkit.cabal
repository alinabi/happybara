  default-language:    Haskell2010


executable             demo
  main-is:             demo.hs
  hs-source-dirs:      demo
  build-depends:       base >=4.6 && <4.7,
                       process,
                       directory,
                       network,
                       word8,
                       bytestring,
                       mtl,
                       monad-control,
                       lifted-base,
                       data-default,
                       transformers-base,
                       text,
                       http-types,
                       vector,
                       aeson,
                       case-insensitive,
                       happybara-webkit
  ghc-options:       -threaded -O2
